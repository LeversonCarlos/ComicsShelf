     </EmbeddedResource>
     <EmbeddedResource Update="Controls\Styles\LightTheme.xaml">
       <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
     </EmbeddedResource>
   </ItemGroup>

</Project>
