<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary 
   xmlns="http://xamarin.com/schemas/2014/forms" 
   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
   xmlns:styles="clr-namespace:ComicsShelf.Base.Styles"
   x:Class="ComicsShelf.Base.Styles.BaseStyles">

   <ResourceDictionary.MergedDictionaries>
      <styles:LightTheme />
   </ResourceDictionary.MergedDictionaries>

   <Style TargetType="ProgressBar" x:Key="ProgressBar">
      <Setter Property="Margin" Value="0" />
      <Setter Property="HeightRequest" Value="4" />
      <Setter Property="ProgressColor" Value="{StaticResource OverlayBackgroundColor}" />
      <Setter Property="BackgroundColor" Value="{StaticResource OverlayForegroundColor}" />
   </Style>

   <Style TargetType="BoxView" x:Key="Separator">
      <Setter Property="Margin" Value="0,1" />
      <Setter Property="HeightRequest" Value="1" />
      <Setter Property="BackgroundColor" Value="{StaticResource SeparatorColor}" />
   </Style>

</ResourceDictionary>