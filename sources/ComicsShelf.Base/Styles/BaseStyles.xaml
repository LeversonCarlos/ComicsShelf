<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary 
   xmlns="http://xamarin.com/schemas/2014/forms" 
   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
   x:Class="ComicsShelf.Base.Styles.BaseStyles">

   <Style TargetType="ContentView">
      <Setter Property="BackgroundColor" Value="{StaticResource BackgroundColor}" />
   </Style>

   <Style TargetType="ProgressBar" x:Key="ProgressBar" >
      <Setter Property="HeightRequest" Value="1" />
      <Setter Property="ProgressColor" Value="{StaticResource PrimaryColor}" />
   </Style>

   <Style TargetType="BoxView" x:Key="Separator" >
      <Setter Property="Margin" Value="0,1" />
      <Setter Property="HeightRequest" Value="1" />
      <Setter Property="BackgroundColor" Value="{StaticResource SeparatorColor}" />
   </Style>

</ResourceDictionary>