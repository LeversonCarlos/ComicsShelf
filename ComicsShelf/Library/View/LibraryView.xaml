<?xml version="1.0" encoding="utf-8" ?>
<controls:BasePage 
   xmlns="http://xamarin.com/schemas/2014/forms"
   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
   xmlns:controls="clr-namespace:ComicsShelf.Helpers.Controls"
   x:Class="ComicsShelf.Library.LibraryView"
   x:Name="MyPage">
   <controls:BasePage.Content>
      <StackLayout VerticalOptions="StartAndExpand" Margin="0,40,0,0" Spacing="40" >

         <StackLayout Spacing="5">
            <Label Text="{controls:Translate Text=LIBRARY_MAIN_LABEL}" 
                   HorizontalOptions="Center" FontSize="Large" />
            <Label Text="{controls:Translate Text=LIBRARY_UNDEFINED_FOLDER_MESSAGE}" 
                   IsVisible="{Binding HasLibraries, Converter={StaticResource notConverter}}" 
                   HorizontalOptions="Center" HorizontalTextAlignment="Center" FontAttributes="Bold" />
         </StackLayout>

         <controls:RepeaterView 
            ItemsSource="{Binding Libraries}" 
            HorizontalOptions="FillAndExpand" Margin="40,0,40,0" Spacing="5" >
            <controls:RepeaterView.ItemTemplate>
               <DataTemplate>
                  <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" >
                     <Label Text="{Binding LibraryText}" 
                               HorizontalOptions="StartAndExpand" VerticalOptions="Center" 
                               FontSize="Medium" FontAttributes="Bold">
                     </Label>
                     <Image HorizontalOptions="End" HeightRequest="20" Aspect="AspectFit">
                        <Image.GestureRecognizers>
                           <TapGestureRecognizer 
                                 Command="{Binding BindingContext.RemoveLibraryTappedCommand, Source={x:Reference MyPage}}"
                                 CommandParameter="{Binding .}">
                           </TapGestureRecognizer>
                        </Image.GestureRecognizers>
                        <Image.Source>
                           <OnPlatform x:TypeArguments="FileImageSource">
                              <On Platform="Android" Value="icon_Delete.png"></On>
                              <On Platform="IOS" Value="icon_Delete.png"></On>
                              <On Platform="UWP" Value="Assets/icon_Delete.png"></On>
                           </OnPlatform>
                        </Image.Source>
                     </Image>
                  </StackLayout>
               </DataTemplate>
            </controls:RepeaterView.ItemTemplate>
         </controls:RepeaterView>

         <StackLayout>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
               <controls:PrimaryButton 
                  Text="{controls:Translate Text=LIBRARY_SELECT_FOLDER_COMMAND}" 
                  Command="{Binding AddLibraryTappedCommand}" />
               <controls:PrimaryButton 
                  Text="{controls:Translate Text=LIBRARY_CONNECT_ONEDRIVE_COMMAND}" 
                  IsEnabled="{Binding HasOneDriveLibrary, Converter={StaticResource notConverter}}" 
                  Command="{Binding AddOneDriveLibraryCommand}" />
            </StackLayout>
            <ActivityIndicator IsRunning="{Binding IsBusy}" />
         </StackLayout>

      </StackLayout>
   </controls:BasePage.Content>
</controls:BasePage>