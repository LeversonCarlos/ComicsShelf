<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Product>Comics Shelf</Product>
    <Company>Friendship Solutions</Company>
    <Copyright>Copyright Â© Friendship Solutions 2018</Copyright>
    <Version>1.4.15</Version>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DebugType>pdbonly</DebugType>
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Helpers\Controls\Controls\CoverFrameView.Empty.png" />
    <None Remove="Helpers\Controls\RatingView.EmptyStar.png" />
    <None Remove="Helpers\Controls\RatingView.FullStar.png" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Helpers\Controls\Controls\CoverFrameView.Empty.png" />
    <EmbeddedResource Include="Helpers\Controls\RatingView.EmptyStar.png" />
    <EmbeddedResource Include="Helpers\Controls\RatingView.FullStar.png" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="CarouselView.FormsPlugin" Version="5.2.0" />
    <PackageReference Include="sqlite-net-pcl" Version="1.5.231" />
    <PackageReference Include="Xamarin.Forms" Version="3.1.0.697729" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Views\Library\LibraryView.xaml.cs">
      <DependentUpon>LibraryView.xaml</DependentUpon>
    </Compile>
    <Compile Update="Views\Home\HomeView.xaml.cs">
      <DependentUpon>HomeView.xaml</DependentUpon>
    </Compile>
    <Compile Update="Views\Folder\FolderView.xaml.cs">
      <DependentUpon>FolderView.xaml</DependentUpon>
    </Compile>
    <Compile Update="Views\File\PageView.xaml.cs">
      <DependentUpon>PageView.xaml</DependentUpon>
    </Compile>
    <Compile Update="Views\File\FileView.xaml.cs">
      <DependentUpon>FileView.xaml</DependentUpon>
    </Compile>
    <Compile Update="R\Strings.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Strings.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="R\Strings.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Strings.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>
</Project>