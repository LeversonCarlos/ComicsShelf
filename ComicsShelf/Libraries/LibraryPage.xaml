<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
   xmlns="http://xamarin.com/schemas/2014/forms"
   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
   x:Class="ComicsShelf.Libraries.LibraryPage"
   xmlns:constrols="clr-namespace:ComicsShelf.Controls"
   BackgroundColor="{StaticResource colorBackground}"
   Title="{Binding Title}">

   <ContentPage.ToolbarItems>
      <ToolbarItem Text="Remove" Icon="icon_Delete.png" Clicked="DeleteLibrary_Clicked" />
   </ContentPage.ToolbarItems>

   <ContentPage.Content>
      <CollectionView ItemsSource="{Binding ComicFolders}" ItemsLayout="{x:Static ListItemsLayout.VerticalList}">
         <CollectionView.ItemTemplate>
            <DataTemplate>

               <StackLayout Padding="5,10,0,5" Spacing="5" >
                  <Label Text="{Binding FolderPath}" 
                         FontAttributes = "Bold"
                         FontSize = "15" />
                  <CollectionView ItemsSource="{Binding ComicFiles}" ItemsLayout="{x:Static ListItemsLayout.HorizontalList}" HeightRequest="222" >
                     <CollectionView.ItemTemplate>
                        <DataTemplate>

                           <StackLayout Padding="0,0,5,0" WidthRequest="145" HeightRequest="222" >
                              <constrols:CoverView ImageSource="{Binding CoverPath}" Progress="{Binding ReadingPercent}" HasCache="False" ></constrols:CoverView>
                              <!-- 
                              <StackLayout BackgroundColor="Red" VerticalOptions="FillAndExpand" >
                                 <Label Text="{Binding ComicFile.FullText}" FontAttributes="Bold"></Label>
                                 <Label Text="{Binding ComicFile.FilePath}" FontSize="Micro" TextColor="White"></Label>
                                 <Label Text="{Binding CoverPath}" FontSize="Micro"></Label>
                              </StackLayout>
                              -->
                           </StackLayout>

                        </DataTemplate>
                     </CollectionView.ItemTemplate>
                  </CollectionView>
               </StackLayout>

            </DataTemplate>
         </CollectionView.ItemTemplate>
      </CollectionView>
   </ContentPage.Content>

</ContentPage>