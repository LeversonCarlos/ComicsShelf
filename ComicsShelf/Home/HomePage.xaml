<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
   xmlns="http://xamarin.com/schemas/2014/forms"
   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
   x:Class="ComicsShelf.Home.HomePage"
   x:Name="libraryPage"
   xmlns:controls="clr-namespace:ComicsShelf.Controls"
   BackgroundColor="{StaticResource colorBackground}"   
   Title="{Binding Title}">
   <ContentPage.Content>
      <StackLayout>
         
         <CollectionView ItemsSource="{Binding ComicFolders}" ItemsLayout="{x:Static ListItemsLayout.VerticalList}">
            <CollectionView.ItemTemplate>
               <DataTemplate>

                  <StackLayout Padding="5,10,0,5" Spacing="5" >
                     <Label Text="{Binding FolderPath}" 
                         FontAttributes = "Bold"
                         FontSize = "15" />
                     <CollectionView ItemsSource="{Binding ComicFiles}" ItemsLayout="{x:Static ListItemsLayout.HorizontalList}" HeightRequest="222" >
                        <CollectionView.EmptyView >
                           <StackLayout HeightRequest="222" >
                              <Label HorizontalOptions="Center" VerticalOptions="CenterAndExpand">Nenhuma recomendaçao a ser feita</Label>
                           </StackLayout>
                        </CollectionView.EmptyView>

                        <CollectionView.ItemTemplate>
                           <DataTemplate>

                              <StackLayout Padding="0,0,5,0" WidthRequest="145" HeightRequest="222" >
                                 <controls:CoverView
                                 ImageSource="{Binding CoverPath}" 
                                 Progress="{Binding ReadingPercent}"
                                 CacheStatus="{Binding CacheStatus}" 
                                 OpenCommand="{Binding Path=BindingContext.OpenCommand, Source={x:Reference libraryPage} }" >
                                 </controls:CoverView>
                              </StackLayout>

                           </DataTemplate>
                        </CollectionView.ItemTemplate>
                     </CollectionView>
                  </StackLayout>

               </DataTemplate>
            </CollectionView.ItemTemplate>
         </CollectionView>

         <controls:NotifyView
            IsVisible="{Binding Notify.IsRunning}" 
            Text="{Binding Notify.Text}" 
            Progress="{Binding Notify.Progress}" 
            Details="{Binding Notify.Details}" >
         </controls:NotifyView>

      </StackLayout>
   </ContentPage.Content>
</ContentPage>