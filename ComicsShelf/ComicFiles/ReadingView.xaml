               <controls:PageView ImagePath="{Binding Path}" ImageSize="{Binding PageSize}" ImageLoaded="True" ></controls:PageView>
            </DataTemplate>
         </cards:CarouselView.ItemTemplate>
      </cards:CarouselView>
      -->

      <!-- 
      <CarouselView HorizontalOptions="Fill" VerticalOptions="Fill" ItemsSource="{Binding ComicFile.Pages}" ItemSizingStrategy="MeasureAllItems" >
         <CarouselView.ItemsLayout>
            <GridItemsLayout Orientation="Horizontal" SnapPointsType="Mandatory" SnapPointsAlignment="Start" />
         </CarouselView.ItemsLayout>
         <CarouselView.ItemTemplate>
            <DataTemplate>
               <controls:PageView ImagePath="{Binding Path}" ImageSize="{Binding PageSize}" ImageLoaded="True" ></controls:PageView>
            </DataTemplate>
         </CarouselView.ItemTemplate>
      </CarouselView>
      -->

   </ContentPage.Content>
</ContentPage>